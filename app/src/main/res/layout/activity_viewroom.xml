<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkpurple">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="ROOM TYPE"
            android:textAllCaps="true"
            android:textColor="#544B6B"
            android:textSize="40sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:layout_margin="10dp"
            android:background="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="214dp"
                android:padding="20dp"
                android:text="Single Room"
                android:textColor="#544B6B"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/bookbtn1"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="229dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/rectangle_btn"
                android:text="Book Now"
                android:textAlignment="center"
                android:textColor="#544B6B"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="13dp"
                android:layout_marginRight="8dp"
                android:paddingTop="20dp"
                app:srcCompat="@drawable/single" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:layout_above="@+id/bookbtn1"
                android:layout_alignParentRight="true"
                android:layout_marginRight="242dp"
                android:layout_marginBottom="-1dp"
                android:maxLines="10"
                android:paddingTop="20dp"
                android:text="1 bed \n RM110 Per Night"
                android:textAlignment="center"
                android:textColor="#544B6B" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:layout_margin="10dp"
            android:background="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="212dp"
                android:padding="20dp"
                android:text="Double Room"
                android:textColor="#544B6B"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/bookbtn2"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="229dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/rectangle_btn"
                android:text="Book Now"
                android:textAlignment="center"
                android:textColor="#544B6B"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="180dp"
                android:layout_height="150dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="13dp"
                android:layout_marginRight="16dp"
                android:paddingTop="20dp"
                app:srcCompat="@drawable/room2" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:layout_above="@+id/bookbtn2"
                android:layout_alignParentRight="true"
                android:layout_marginRight="242dp"
                android:layout_marginBottom="-1dp"
                android:maxLines="10"
                android:paddingTop="20dp"
                android:text="1 bed \n RM200 Per Night"
                android:textAlignment="center"
                android:textColor="#544B6B" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:layout_margin="10dp"
            android:background="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="212dp"
                android:padding="20dp"
                android:text="Deluxe Room"
                android:textColor="#544B6B"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/bookbtn3"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="229dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/rectangle_btn"
                android:text="Book Now"
                android:textAlignment="center"
                android:textColor="#544B6B"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="180dp"
                android:layout_height="150dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="12dp"
                android:layout_marginRight="15dp"
                android:paddingTop="20dp"
                app:srcCompat="@drawable/room3" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="120dp"
                android:layout_height="90dp"
                android:layout_above="@+id/bookbtn3"
                android:layout_alignParentRight="true"
                android:layout_marginRight="231dp"
                android:layout_marginBottom="-1dp"
                android:maxLines="10"
                android:paddingTop="20dp"
                android:text="Well furnished room with 1 bed \n RM340 Per Night"
                android:textAlignment="center"
                android:textColor="#544B6B" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:layout_margin="10dp"
            android:background="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="227dp"
                android:padding="20dp"
                android:text="Twin Room"
                android:textColor="#544B6B"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="190dp"
                android:layout_height="150dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="17dp"
                android:layout_marginRight="11dp"
                android:paddingTop="20dp"
                app:srcCompat="@drawable/room4" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:layout_above="@+id/bookbtn4"
                android:layout_alignParentRight="true"
                android:layout_marginRight="242dp"
                android:layout_marginBottom="3dp"
                android:maxLines="10"
                android:paddingTop="20dp"
                android:text="2 single bed \n RM300 Per Night"
                android:textAlignment="center"
                android:textColor="#544B6B" />

            <Button
                android:id="@+id/bookbtn4"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="230dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/rectangle_btn"
                android:text="Book Now"
                android:textAlignment="center"
                android:textColor="#544B6B"
                android:textSize="12sp" />
        </RelativeLayout>

    </LinearLayout>
</ScrollView>

