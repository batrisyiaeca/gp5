<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bookingbg"
    tools:context=".BookingForm">

    <TextView
        android:id="@+id/tvBookingForm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.112" />

    <EditText
        android:id="@+id/tvName"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:background="@drawable/rectangle"
        android:ems="10"
        android:inputType="textPersonName"
        android:paddingStart="15dp"
        android:textColor="#3C3451"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.54"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvBookingForm"
        app:layout_constraintVertical_bias="0.103" />

    <EditText
        android:id="@+id/tvPhone"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:background="@drawable/rectangle"
        android:ems="10"
        android:inputType="phone"
        android:paddingStart="15dp"
        android:textColor="#3C3451"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.54"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvEmail"
        app:layout_constraintVertical_bias="0.177" />

    <EditText
        android:id="@+id/tvEmail"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:background="@drawable/rectangle"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:paddingStart="15dp"
        android:textColor="#3C3451"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.54"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvName"
        app:layout_constraintVertical_bias="0.143" />

    <Button
        android:id="@+id/btnSubmitForm"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginBottom="28dp"
        android:background="@drawable/longbtn"
        android:text="Submit"
        android:textColor="#3C3451"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvPhone"
        app:layout_constraintVertical_bias="1.0" />

    <Spinner
        android:id="@+id/spRoomType"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:background="@drawable/roombtn"
        android:drawSelectorOnTop="true"
        app:layout_constraintBottom_toTopOf="@+id/btnSubmitForm"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.54"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvPhone"
        app:layout_constraintVertical_bias="0.277" />

    <TextView
        android:id="@+id/tvDateForm"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:background="@drawable/rectangle"
        android:gravity="fill_vertical"
        android:paddingStart="15dp"
        android:textColor="#3C3451"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.54"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spRoomType"
        app:layout_constraintVertical_bias="0.424" />

</androidx.constraintlayout.widget.ConstraintLayout>